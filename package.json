{
  "name": "carte-grise-platform",
  "private": true,
  "version": "0.1.0",
  "description": "Plateforme carte grise : frontend Next.js et backend NestJS",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:backend": "npm --workspace backend run start:dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "lint": "npm --workspaces run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
